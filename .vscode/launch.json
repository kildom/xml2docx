{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test-template",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/test/test-template.ts",
            "outFiles": [
                "${workspaceFolder}/dist/test/template/**/*.cjs"
            ],
            "preLaunchTask": "npm: build-test-template"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cli",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/cli.ts",
            "args": [
                "--debug",
                "test/inputs/Paragraph.xml"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/cli/**/*.cjs"
            ],
            "preLaunchTask": "npm: build-cli"
        }
    ]
}